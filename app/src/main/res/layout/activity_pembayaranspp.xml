<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pembayaranspp"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserratextrabold"
            android:text="Pembayaran SPP"
            android:textColor="@color/colorPrimary"
            android:textSize="32dp" />


        <android.support.v7.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/semester1"
                    android:textColor="@color/colorPrimary"
                    android:layout_margin="5dp"
                    android:text="Rp.xxxxxxx"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/semester12019"
                    />

                <TextView
                    android:id="@+id/statussm1"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="250dp"
                    android:text="xxxx"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/montserratextrabold"/>
                <TextView
                    android:id="@+id/semester12019"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="7dp"
                    android:layout_margin="5dp"
                    android:text="Semester 1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserratbold"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/semester2"
                    android:textColor="@color/colorPrimary"
                    android:layout_margin="5dp"
                    android:text="Rp.xxxxxx"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/semester22019"
                    />

                <TextView
                    android:id="@+id/statussm2"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="5dp"
                    android:text="xxxx"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserratextrabold"/>

                <TextView
                    android:id="@+id/semester22019"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="7dp"
                    android:layout_margin="5dp"
                    android:text="Semester 2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserratextrabold"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/semester3"
                    android:textColor="@color/colorPrimary"
                    android:layout_margin="5dp"
                    android:text="Rpxxxxxx"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/semester12018" />

                <TextView
                    android:id="@+id/statussm3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:text="xxxx"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserratextrabold"/>

                <TextView
                    android:id="@+id/semester12018"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="7dp"
                    android:layout_margin="5dp"
                    android:text="Semester 3"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserratbold"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/semester4"
                    android:textColor="@color/colorPrimary"
                    android:layout_margin="5dp"
                    android:text="Rpxxxxxx"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/semester22018"
                    />

                <TextView
                    android:id="@+id/statussm4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:text="xxxx"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserratextrabold"/>
                <TextView
                    android:id="@+id/semester22018"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="7dp"
                    android:layout_margin="5dp"
                    android:text="Semester 4"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserratbold"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>
</ScrollView>